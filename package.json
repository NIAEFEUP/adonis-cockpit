{
  "name": "@foadonis/cockpit",
  "description": "",
  "version": "0.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build/src",
    "build/providers",
    "build/services",
    "build/stubs",
    "build/index.d.ts",
    "build/index.js",
    "build/inertia",
    "build/components.d.ts",
    "build/components.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./fields": "./build/src/fields/main.js",
    "./menu": "./build/src/menu/main.js",
    "./providers/*": "./build/providers/*.js",
    "./services/main": "./build/services/main.js",
    "./commands": "./build/commands/main.js",
    "./cockpit_middleware": "./build/src/cockpit_middleware.js",
    "./inertia/*": "./build/inertia/*"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "copy:resources": "copyfiles \"resources/**/*.edge\" build",
    "copy:inertia": "copyfiles \"inertia/**/*.vue\" \"inertia/**/*.css\" build",
    "index:commands": "adonis-kit index build/commands",
    "watch": "chokidar './inertia/**/*' -c 'npm run copy:inertia'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "dev": "tsc --watch",
    "postbuild": "pnpm run copy:templates && pnpm run index:commands",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/bouncer": "^3.1.3",
    "@adonisjs/core": "^6.12.0",
    "@adonisjs/eslint-config": "^2.0.0-beta.7",
    "@adonisjs/lucid": "^21.2.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.6.3",
    "@testing-library/vue": "^8.1.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.5",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/coverage-istanbul": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "@vue/test-utils": "^2.4.6",
    "c8": "^10.1.2",
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "edge.js": "^6.0.2",
    "eslint": "^9.9.0",
    "html-entities": "^2.5.2",
    "jsdom": "^25.0.1",
    "np": "^10.0.6",
    "prettier": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^2.1.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^21.2.0",
    "edge.js": "^6.0.2",
    "reflect-metadata": "^0.2.2"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config",
  "dependencies": {
    "@adonisjs/shield": "^8.1.1",
    "@inertiajs/vue3": "^1.2.0",
    "@japa/file-system": "^2.3.0",
    "@primevue/themes": "^4.0.7",
    "@tanstack/vue-query": "^5.59.0",
    "@tanstack/vue-table": "^8.20.5",
    "@vinejs/vine": "^2.1.0",
    "axios": "^1.7.7",
    "edge": "^7.10.1",
    "edge-error": "^4.0.1",
    "edge-parser": "^9.0.2",
    "lodash": "^4.17.21",
    "primeicons": "^7.0.0",
    "primevue": "^4.0.7",
    "qs": "^6.13.0",
    "ts-morph": "^23.0.0",
    "vue": "^3.5.10"
  }
}
